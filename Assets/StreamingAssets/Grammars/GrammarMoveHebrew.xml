      <item> Shesh </item>
      <item> Sheva </item>
      <item> Shmone </item>
      <item> Tesha </item>
    </one-of>
  </rule>

  <rule id="letters">
    <one-of>
      <item> aigul adom</item>
      <item> ribua adom </item>
      <item> meshulash adom </item>
      <item> aigul yarok</item>
      <item> ribua yarok </item>
      <item> meshulash yarok </item>
      <item> aigul kahol</item>
      <item> ribua kahol </item>
      <item> meshulash kahol </item>
    </one-of>
  </rule>

</grammar>